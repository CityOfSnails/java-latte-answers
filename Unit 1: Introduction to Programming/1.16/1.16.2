{
    public void run()
    {
        for(int i = 0; i < 4; i++)
        {
            while(frontIsClear())
            {
                move();
            }
            
            while(frontIsBlocked())
            {
                putStack();
                turnLeft();
            }
        }
    }
    
    private void putStack()
    {
        putBall();
        putBall();
        putBall();
        putBall();
        putBall();
        putBall();
        putBall();
        putBall();
    }
    
