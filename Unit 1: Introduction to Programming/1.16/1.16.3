public class TowerBuilderKarel extends SuperKarel
{
    public void run()
    {
        makeTower();
        
        while (frontIsClear())
        {
            move();
            
            if(frontIsClear())
            {
                move();
                makeTower();
            }
        }
    }
    
    private void makeTower()
    {
        turnLeft();
        putBall();
        move();
        putBall();
        move();
        putBall();
        
        turnAround();
        move();
        move();
        turnLeft();
    }
}
