public class MovieRatings extends ConsoleProgram
{
    public void run()
    {
        double movieRating = readDouble("Please enter a movie rating: ");
        
        int movieRounded = (int)(movieRating + 0.5);
        
        System.out.println("Rating rounded: " + movieRounded);
    }
}


// converting to an int just drops the decimal
// so adding 0.5 will make sure it rounds up
// (if its x.5 or higher)
